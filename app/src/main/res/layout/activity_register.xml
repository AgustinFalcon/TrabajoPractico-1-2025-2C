<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="@string/registro"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Introduzaca su usuario"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_margin="16dp"
        android:hint="Introduzaca su email"
        app:layout_constraintTop_toBottomOf="@+id/editTextUser"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_margin="16dp"
        android:hint="Introduzaca su password"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"/>

    <TextView
        android:id="@+id/textViewSelectColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seleccione_un_color"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"/>

    <Spinner
        android:id="@+id/selectColorSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectColor"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="18dp"
        android:textSize="22sp"
        android:text="@string/btn_register"
        app:layout_constraintTop_toBottomOf="@+id/selectColorSpinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>